html(lang="en")
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        block title
            title City of Thieves
            meta(name="description", content='An Adventure Time Game Jam Game')
        meta(name="author", content='Michael Rooney, David Mauro and Jen Taclas')
        
        script(src="http://cdn.craftycomponents.com/crafty-release.js")
        script(src="http://code.jquery.com/jquery-1.8.0.min.js")
        script(src="/js/lib/jquery.animate-colors-min.js")
        script(src="/js/lib/alea.js")
        script(src="/js/game/main.js")
        script(src="/js/game/scenes.js")
        script(src="/js/main.js")
        script(src="/socket.io/socket.io.js")
        script(src="/js/game/networking.js")

    body(style="zoom:150%;")
    #container(style="width:896px;margin:auto;text-align:center;")
        #hud
        #cr-stage(style="height:400px;width:896px;background:#ccc;")
            h1 What Time Is It?
            div click to start
        .controls
            b
                u Controls
            br
            WASD: movement
            br
            Space: steal
            br

    -if (typeof(lobby_id) != 'undefined')
        script
            window.game.seed = #{lobby_id};
            window.game.nickname = "#{nickname}";
